@model GWCU_USSD_WebApp.Models.AdminUserViewModel
@{
    ViewBag.Title = "Log In";
}
<div class="row">
    <div class="col-md-8 jumbotron">
        <h2>@ViewBag.Title.</h2>
        <section id="loginForm">
            @using (Html.BeginForm("LoginAdmin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @required = true })
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = true })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SecretKey, new { @class = "col-md-2 control-label", @required = true })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.SecretKey, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SecretKey, "", new { @class = "text-danger" })
                    </div>
                </div>
                if (ViewBag.LoginAttempted == "YES")
                {
                    <div class="form-group">
                        <div class="col-md-10">
                            <small class="form-text text-danger">Wrong Credentials!</small>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
<script>
    $('nav,.sidebar').remove()
</script>